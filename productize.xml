<project name="Make a p2 product from the SDK" default="director" basedir=".">
	<property file="build.properties" />
	<path id="pdebuildClasspath">
		<fileset dir="build/p2-temp/eclipse/plugins">
			<include name="*.jar" />
		</fileset>
	</path>
	<target name="director">
		<taskdef name="p2.generator"
		         classname="org.eclipse.equinox.internal.p2.metadata.generator.ant.GeneratorTask"
		         classpathref="pdebuildClasspath" />
		<p2.generator append="true"
		              publishartifacts="true"
		              flavor="tooling"
		              rootversion="3.5.0"
		              root="Eclipse SDK"
		              source="build/p2-temp/eclipse"
		              artifactrepositoryname="Eclipse SDK"
		              metadatarepositoryname="Eclipse SDK"
		              metadatarepository="build/p2-temp/eclipse/metadata"
		              artifactrepository="build/p2-temp/eclipse/metadata" />
	</target>
</project>