<project name="Fetch srcIncluded zip" default="newSources" basedir=".">
	<property name="fileName"
	          value="eclipse-sourceBuild-srcIncluded-3.5M4.zip" />
	<available file="${fileName}" property="downloaded" value="true" />
	<target name="download" unless="downloaded">
		<get src="http://download.eclipse.org/eclipse/downloads/drops/S-3.5M4-200812111908/${fileName}"
		     dest="${fileName}"
		     usetimestamp="true" />
	</target>
	<target name="newSources"
	        depends="download"
	        description="Replace old unzipped sources with unmodified from the downloaded zip">
		<delete dir="SDK" />
		<mkdir dir="SDK" />
		<unzip dest="SDK" src="${fileName}" />
	</target>
</project>