<project name="Fetch srcIncluded zip" default="newSources" basedir=".">
	<property name="downloadFileID"
        value="I20090324-1325" />
	<property name="downloadFileName"
	          value="eclipse-sourceBuild-srcIncluded-${downloadFileID}.zip" />
	<available file="${fileName}" property="downloaded" value="true" />
	<target name="download" unless="downloaded">
		<get src="http://download.eclipse.org/eclipse/downloads/drops/${downloadFileID}/${downloadFileName}"
		     dest="${downloadFileName}"
		     usetimestamp="true" />
	</target>
	<target name="newSources"
	        depends="download"
	        description="Replace old unzipped sources with unmodified from the downloaded zip">
		<delete dir="SDK" />
		<mkdir dir="SDK" />
		<unzip dest="SDK" src="${downloadFileName}" />
		<delete>
			<fileset dir="SDK">
				<include name="**/*.so"/>
			</fileset>
		</delete>

	</target>
</project>
